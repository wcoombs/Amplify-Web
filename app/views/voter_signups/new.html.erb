<div class="background_img">
  <div class="overlay">
      <div class="ui center aligned stackable grid">
        <div class="row">
          <div class="column">
            <img class="ui large middle aligned image amplify_logo" src="<%= asset_pack_path 'images/inverted-logo.svg' %>">
          </div>
        </div>
          <div class="row">
            <div class="column">
              <div class="ui massive normal_font white_text header">Join the party!</div>
            </div>
          </div>
        <div class="row">
          <div class="column max_width_500">
            <%= render "layouts/flash_messages" %>
            <%= form_tag(voter_signups_path, { method: :post, class: "ui form" }) do |f| %>
              <div class="field">
                <%= telephone_field_tag :room_code, nil, placeholder: "Room Code" %>
              </div>
              <div class="field">
                <%= text_field_tag :nickname, nil, placeholder: "Nickname" %>
              </div>
              <div class="field">
                <%= submit_tag "Join Room", class: "ui amplify_color_background white_text button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
  $('.amplify_logo')
    .transition('set looping pulse')
    .transition('pulse', '1500ms')
  ;

  $('.ui.form')
    .form({
      fields: {
        room_code    : 'empty',
        nickname     : 'empty'
      },
      inline : true,
    })
  ;
</script>
